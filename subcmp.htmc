<htmc-define style="display: none;">
    <component name="my-counter" attributes="count">
        <div>
            <p>Count: ${count}</p>
            <button onclick="count++">Increment</button>
            <button onclick="count--">Decrement</button>
        </div>
    </component>
    <component name="my-counter-container" attributes="">
        <div>
            <my-counter count="0"></my-counter>
        </div>
    </component>
</htmc-define>

